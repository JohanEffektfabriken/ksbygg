<ul class="nav navbar-nav navbar-right hidden-xs">
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" id="signin-menu-dropdown" data-toggle="dropdown">
      Log in <b class="caret"></b>
    </a>

    <div class="dropdown-menu" role="menu" aria-labelledby="signin-menu-dropdown">
      <div id="navbar-signin-dropdown" class="col-sm-12">
        <%= form_for(:user, :url => session_path(:user), role: 'form') do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= create_from_input_addon 'envelope' %>
                <%= f.text_field :email, class: 'form-control', autocomplete: 'on', placeholder: 'Email address', required: true %>
              </div>

              <div class="input-group">
                <%= create_from_input_addon 'lock' %>
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
              </div>

              <div class="input-group-padding">
                <div class="checkbox pull-right">
                  <%= f.label :remember_me do %>
                      <%= f.check_box :remember_me %> Remember me
                  <% end %>
                </div>

                <%= f.submit 'Sign in', class: 'btn btn-primary' %>
              </div>

              <p class="input-group-padding">
                <%= link_to 'Forgot your password?', new_password_path(:user) %><br />
                <!--<br />
                <b>Need an account?</b><br />
                <#%= link_to 'Sign up', new_registration_path(:user) %>-->
              </p>
            </div>
        <% end %>
      </div>
    </div>
  </li>
</ul>

<li class="visible-xs">
  <%= link_to 'LOG IN', new_user_session_path %>
</li>